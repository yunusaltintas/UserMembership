@model UserMembership.Data.Models.RoleCreateViewModel

<h3>Role Create</h3>

<form asp-action="Create" asp-controller="Role" method="post">
    <div class="form-group">
        <label for="exampleInputEmail1">Name</label>
        <input type="text" asp-for="@Model.Name" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Name">
        <small id="emailHelp" class="form-text text-muted"></small>
    </div>
    
    <button type="submit" class="btn btn-primary">Submit</button>
</form>
@model IEnumerable<UserMembership.Data.Entities.Company>

<h3>Company List</h3>

<a asp-controller="CompanyInvitation" asp-action="Create" class="btn btn-secondary btn-lg active" role="button" aria-pressed="true">Company Create</a>
<br />
<div class="row mt-2">
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Name</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row">@item.Id</th>
                    <th>@item.Name</th>
                    <td><a asp-controller="CompanyInvitation" asp-action="Delete" asp-route-id="@item.Id">Delete</a></td>
                    <td><a asp-controller="CompanyInvitation" asp-action="Update" asp-route-id="@item.Id">Update</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>